<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền nhạt -->
    <solid android:color="#FFF8E1" />

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Viền mảnh -->
    <stroke
        android:width="1dp"
        android:color="#FFD54F" />

    <!-- Bóng đổ nhẹ -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
